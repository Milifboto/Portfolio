---
import type {ImageType,  TechnologiesType} from "../utils/utils.ts"
import ProjectImages from "../components/ProjectImages.tsx"

interface Props{
  id: number
  title: string
  subtitle: string
  image: ImageType
  video?: string
  github: string
  url: string
  description: string
  technologies: TechnologiesType[]
}

const { id, title, subtitle, image, video, github, url, technologies, description } = Astro.props

---

<div>
  <ProjectImages client:load image={image} title={title} github={github} url={url} technologies={technologies} description={description} />
  <div class="flex justify-between">
    <div class="flex flex-col ml-4 my-2">
      <h1 class="font-semibold text-xl">{title}</h1>
      <h2 class="text-gray-400">{subtitle}</h2>
    </div>
    <div class="flex mr-4 my-2">
      <a href={github} target="_blank" class="p-2 hover:bg-white rounded-xl hover:text-slate-900 flex justify-center items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
       </svg>
      </a>
      <a href={url} target="_blank" class="p-2 hover:bg-white rounded-xl hover:text-slate-900 flex justify-center items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-external-link" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6"></path>
          <path d="M11 13l9 -9"></path>
          <path d="M15 4h5v5"></path>
       </svg>
      </a>
    </div>
  </div>
</div>