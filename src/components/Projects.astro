---
import {projects} from "../utils/utils.ts"
import CardProject from "./CardProject.astro";
---

<div class="flex flex-col items-center justify-center flex-wrap sm:h-screen lg:h-[632px] sm:min-h-[500px] h-[500px]">
  <div class="w-1/2 flex flex-col ">
    <h1 class="font-extrabold text-6xl pb-10">Projects</h1>
    <div class="grid gap-8 lg:grid-cols-2 sm:grid-cols-1 place-items-center">
      {
        projects.map(({id, title, subtitle, image, video, github, url, technologies, description}) => <CardProject
        id={id}
        title={title}
        subtitle={subtitle}
        image={image}
        video={video}
        github={github}
        url={url}
        technologies={technologies}
        description={description}
        />)
      }
    </div>
  </div>
</div>